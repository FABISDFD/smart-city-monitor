# Archivo .htaccess para Hostinger
# Coloca este archivo en /public_html/ de tu dominio

# Habilitar el motor de reescritura
RewriteEngine On

# Redirigir peticiones /api al servidor Node.js en puerto 3000
RewriteRule ^api/(.*)$ http://localhost:3000/$1 [P,L]

# CORS - Permitir peticiones desde cualquier origen
Header set Access-Control-Allow-Origin "*"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
Header set Access-Control-Max-Age "3600"

# Cache para archivos estáticos (mejorar rendimiento)
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Header set Cache-Control "max-age=2592000, public"
</FilesMatch>

# No cachear HTML
<FilesMatch "\.(html|htm)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
</FilesMatch>

# Comprimir archivos para carga rápida
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Página de error personalizada (opcional)
ErrorDocument 404 /index.html

# Forzar HTTPS (si tienes SSL activado)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Prevenir acceso a archivos sensibles
<FilesMatch "^\.env|\.htaccess|\.git">
    Order allow,deny
    Deny from all
</FilesMatch>

# Habilitar compresión Gzip
<IfModule mod_gzip.c>
    mod_gzip_on Yes
    mod_gzip_dechunk Yes
    mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
    mod_gzip_item_include mime ^application/x-javascript.*
    mod_gzip_item_include mime ^text/.*
    mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

# Protección básica
Options -Indexes
